<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LifeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17” 39’ 23."
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="19dp"
            android:layout_marginLeft="15.5dp"
            android:layout_marginRight="15.5dp"
            android:layout_marginTop="19dp">

            <ImageView
                android:id="@+id/iv_life_info_icon"
                android:layout_width="13dp"
                android:layout_height="18dp"
                android:src="@drawable/light_bulb"/>

            <TextView
                android:id="@+id/txt_life_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:text="내가 이번주에 삶에 쓴 시간은?!"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/iv_life_info_icon"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/txt_life_info_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/txt_life_info"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:layout_constraintLeft_toLeftOf="@id/txt_life_info"
                app:layout_constraintTop_toBottomOf="@id/txt_life_info"
                app:layout_constraintRight_toRightOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_life_start"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/play_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="28dp"/>

</android.support.constraint.ConstraintLayout>