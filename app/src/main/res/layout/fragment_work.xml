<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.WorkFragment">

    <TextView
        android:id="@+id/txt_work_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:text="0” 0’ 0."
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"/>
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="19dp"
            android:layout_marginLeft="15.5dp"
            android:layout_marginRight="15.5dp">
            
            <ImageView
                android:id="@+id/iv_work_info_icon"
                android:layout_width="13dp"
                android:layout_height="18dp"
                android:src="@drawable/light_bulb"/>

            <TextView
                android:id="@+id/txt_work_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_work_info_icon"
                android:text="내가 이번 주에 근무한 시간은?!"/>

            <TextView
                android:id="@+id/txt_work_info_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="@string/txt_work_info"
                app:layout_constraintLeft_toLeftOf="@id/txt_work_info"
                app:layout_constraintTop_toBottomOf="@id/txt_work_info"/>
            
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_work_start"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/play_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="28dp"/>

</android.support.constraint.ConstraintLayout>